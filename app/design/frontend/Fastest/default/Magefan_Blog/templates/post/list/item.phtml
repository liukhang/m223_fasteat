<?php
    $_post = $this->getPost();
    $_postUrl = $_post->getPostUrl();
    $_postName = $block->escapeHtml($_post->getTitle(), null, true);
?>
<li class="post-holder post-holder-<?php echo $_post->getId() ?>">
    <div class="post-header">

        <div class="post-title-holder clearfix">
            <h2 class="post-title">
                <a class="post-item-link"
                   href="<?php echo $_postUrl ?>">
                    <?php echo $_postName; ?>
                </a>
            </h2>

            <div class="addthis_toolbox addthis_default_style"
                addthis:url="<?php echo $_postUrl ?>"
                addthis:title="<?php echo $_postName; ?>"
                <?php if ($firstImage = $_post->getFirstImage()) { ?>
                addthis:media="<?php echo $firstImage ?>"
                <?php } ?>>
                <a class="addthis_button_facebook"></a>
                <a class="addthis_button_twitter"></a>
                <a class="addthis_button_email"></a>
                <a class="addthis_button_compact"></a>
            </div>
        </div>

        <?php echo $this->getInfoHtml() ?>
    </div>

    <div class="post-content">
        <div class="post-description clearfix">
            <?php if ($featuredImage = $_post->getFeaturedImage()) { ?>
            <div class="post-ftimg-hld post-image cdz-left">
                <a href="<?php echo $_postUrl ?>" title="<?php echo $_postName ?>">
                    <img src="<?php echo $featuredImage ?>" alt="<?php echo $_postName ?>" />
                </a>
                <div class="blog-text-link readmore-link">
                    <div class="text-link-center">
                        <a class="btn-link" href="<?php echo $_postUrl ?>" title="<?php echo $_postName ?>">
                            <span><?php echo __('Read more') ?></span>
                        </a>
                    </div>
                </div>
            </div>
            <?php } ?>
            <div class="post-description clearfix">
                <?php echo $block->getShorContent($_post) ?>
            </div>
            <div class="blog-date"> <span class="value"><?php echo $_post->getPublishDate('F d, Y') ?></span>
            </div>

        </div>
    </div>
    <div class="post-footer">

    </div>
</li>